                        <Label alignment="CENTER" prefHeight="50.0" prefWidth="1010.0" text="VIA Bus"
                               textAlignment="CENTER">
                            <font>
                                <Font size="20.0"/>
                            </font>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                        </Label>
                        <Label alignment="CENTER" prefWidth="1010.0" text="Add Bus">
